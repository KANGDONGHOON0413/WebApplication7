@model WebApplication7.ViewModels.LoginCheck

<form method="post" asp-controller="ManageUsers" asp-action="Login">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label>사용자 아이디</label>
        <input class="form-control" asp-for="UserID" type="text" placeholder="ID" />
        <span>아이디를 입력하세요</span>
    </div>

    <div class="form-group">
        <label>사용자 비밀번호</label>
        <input class="form-control" asp-for="UserPW" type="password" placeholder="PW" />
        <span>비밀번호를 입력하세요</span>
    </div>

    <div class="form-group">
        <button type="submit">Login</button>
    </div>

</form>
